@model App.Web.Models.RelationshipViewModel

@{
    ViewData["Title"] = "StudentLessons";
}
<main id="panel">
    <h2>Student Lessons (Teacher Id: @Model.Teacher.Id)</h2>
    <div>
        <hr />
        <h4>@Model.Student.FirstName's Lessons (Student Id: @Model.Student.Id)</h4>
        @*@if (Model.Student.StudentLessons != null && Model.Student.StudentLessons.Count > 0)
            {
                foreach (var lesson in Model.Student.StudentLessons)
                {
                    <p><a>@lesson.Lesson.Title</a></p>
                }

            }*@

        <hr />
        <h4>All Lessons</h4>
        <form asp-action="StudentLessons">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @foreach (var lesson in Model.Teacher.Lessons)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="@lesson.Id" id="@lesson.Id">
                    <label asp-for="@lesson.Id" class="form-check-label">
                        @lesson.Title (Lesson Id: @lesson.Id)
                    </label>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Update Student Lessons" class="btn btn-primary" />
            </div>
        </form>
    </div>
</main>