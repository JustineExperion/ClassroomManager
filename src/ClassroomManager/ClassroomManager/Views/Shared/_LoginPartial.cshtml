@using Microsoft.AspNetCore.Identity
@using ClassroomManager.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline my-2 my-lg-0">
        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="nav-link text-info">Hello @UserManager.GetUserName(User)!</a>
        <button type="submit" class="btn btn-outline-info my-2 my-sm-0">Log out</button>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link">Log in</a></li>
    </ul>
}